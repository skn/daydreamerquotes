<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ListPreference
        android:entries="@array/array_delay_names"
        android:title="Delay between quotes"
        android:key="PREF_DELAY_BETWEEN_QUOTES"
        android:summary="%s"
        android:defaultValue="60000:fixed"
        android:dialogTitle="Delay"
        android:entryValues="@array/array_delay_values" />
    <ListPreference
        android:entries="@array/array_reading_speed_names"
        android:title="Reading speed (for Smart timing)"
        android:key="PREF_READING_SPEED"
        android:summary="%s"
        android:defaultValue="200"
        android:dialogTitle="Reading Speed"
        android:entryValues="@array/array_reading_speed_values" />
    <ListPreference
        android:entries="@array/array_font_family_names"
        android:title="Text font"
        android:key="PREF_FONT_FAMILY"
        android:summary="%s"
        android:defaultValue="Santana"
        android:dialogTitle="Text font"
        android:entryValues="@array/array_font_family_values" />
    <ListPreference
        android:entries="@array/array_text_size_names"
        android:title="Text size"
        android:key="PREF_TEXT_SIZE"
        android:summary="%s"
        android:defaultValue="0"
        android:dialogTitle="Text size"
        android:entryValues="@array/array_text_size_values" />
    <SwitchPreference
        android:key="PREF_SHOW_TIME"
        android:title="Show time?"
        android:summaryOff="Time will not be shown"
        android:summaryOn="Time will be shown"
        android:switchTextOn = "Y"
        android:switchTextOff = "N"
        android:defaultValue="true" />
    <SwitchPreference
        android:key="PREF_SHOW_DATE"
        android:title="Show date?"
        android:summaryOff="Date will not be shown"
        android:summaryOn="Date will be shown"
        android:switchTextOn = "Y"
        android:switchTextOff = "N"
        android:defaultValue="true" />
    <SwitchPreference
        android:key="PREF_SHOW_BATTERY_PCT"
        android:title="Show battery %?"
        android:summaryOff="Battery % will not be shown"
        android:summaryOn="Battery % will be shown"
        android:switchTextOn = "Y"
        android:switchTextOff = "N"
        android:defaultValue="true" />
    <SwitchPreference
        android:key="PREF_SHOW_BATTERY_STATUS"
        android:title="Show battery status?"
        android:summaryOff="Battery status will not be shown"
        android:summaryOn="Battery status will be shown"
        android:switchTextOn = "Y"
        android:switchTextOff = "N"
        android:defaultValue="true" />
</PreferenceScreen>